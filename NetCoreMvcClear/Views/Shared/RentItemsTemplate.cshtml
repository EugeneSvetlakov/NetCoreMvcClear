@model RentItem

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.ImgUrl" alt="@Model.Name" />
    <h4>Наименование: @Model.Name</h4>
    <p>Стоимость проката: @Model.RentPrice.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="RentCart" asp-action="addToCart" asp-route-id="@Model.Id">Добавить в корзину</a></p>
</div>